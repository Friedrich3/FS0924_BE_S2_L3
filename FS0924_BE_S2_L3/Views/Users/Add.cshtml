@using FS0924_BE_S2_L3.Models.ViewModel
@model CinemaListViewModel;

@{
	ViewData["Title"] = "User";
}


<div class="">
	<form method="post" asp-controller="Users" asp-action="Add">
		<div class="mb-3">
			<label for="inputName" class="form-label">Nome</label>
			<input type="text" class="form-control" id="inputName" required>
		</div>
		<div class="mb-3">
			<label for="inputSurname" class="form-label">Cognome</label>
			<input type="text" class="form-control" id="inputSurname" required>
		</div>

		<div class="mb-4">
			<label for="Sala" class="form-label">Sala</label>
			<select class="form-select" aria-label="Default select example" id="Sala" required>
				<option selected>---Seleziona una sala---</option>
				@foreach (var e in Model.Theatre)
				{
					<option value="@e.IdSala">@e.NomeSala</option>
				}
			</select>
		</div>


		<div class="mb-3 form-check fs-4">
			<input type="checkbox" class="form-check-input" id="CheckIntero">
			<label class="form-check-label" for="CheckIntero">Biglietto Ridotto</label>
		</div>

		<button type="submit" class="btn btn-primary">Submit</button>
		<button type="reset" class="btn btn-secondary">Reset</button>

	</form>
</div>