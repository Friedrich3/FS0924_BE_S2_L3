@using FS0924_BE_S2_L3.Models.ViewModel
@model UtenteAddViewModel;


@{
	ViewData["Title"] = "User";
}


<div class="">
	<form method="post" asp-controller="Users" asp-action="Add">
		<div class="mb-3">
			<label for="inputName" class="form-label">Nome</label>
			<input type="text" asp-for="Nome" class="form-control" id="inputName" required>
		</div>
		<div class="mb-3">
			<label for="inputSurname" class="form-label">Cognome</label>
			<input type="text" asp-for="Cognome" class="form-control" id="inputSurname" required>
		</div>

		<div class="mb-4">
			<label for="Sala" class="form-label">Sala</label>
			<select class="form-select" aria-label="Default select example" id="Sala" asp-for="Sala" required>
				<option selected>---Seleziona una sala---</option>
				@foreach (Sala e in ViewBag.Cinema.Theatre)
				{
					if(e.Posti != 0)
					{
						<option  value="@e.IdSala">@e.NomeSala</option>
					}
					else{
						<option value="@e.IdSala" disabled>@e.NomeSala</option>
					}
				}
			</select> 
		</div>


		<div class="mb-3 form-check fs-4">
			<input type="checkbox" class="form-check-input" id="CheckIntero" asp-for="IsReduced">
			<label class="form-check-label" for="CheckIntero">Biglietto Ridotto</label>
		</div>

		<button type="submit" class="btn btn-primary">Submit</button>
		<button type="reset" class="btn btn-secondary">Reset</button>

	</form>
</div>